<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for file access -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AkiStudio"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31">

        <!-- Project List is now the LAUNCHER activity -->
        <activity
            android:name=".ui.ProjectListActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- IDE/Workspace Activity -->
        <activity
            android:name=".ui.IdeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Code Editor Activity -->
        <activity
            android:name=".editor.EditorActivity"
            android:exported="false"
            android:parentActivityName=".ui.IdeActivity"
            android:label="@string/title_activity_editor" />

    </application>

</manifest>
